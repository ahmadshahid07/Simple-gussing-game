#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int number = rand() % 100 + 1, guess, tries = 0;

    cout << "Guess a number between 1 and 100: ";
    do {
        cin >> guess;
        tries++;
        if (guess > number)
            cout << "Too high! Try again: ";
        else if (guess < number)
            cout << "Too low! Try again: ";
        else
            cout << "Correct! You guessed in " << tries << " tries.\n";
    } while (guess != number);

    return 0;
}
